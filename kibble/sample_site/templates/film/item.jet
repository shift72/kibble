{{extends "../application.jet"}}
{{block body()}}
  <div>
    <h2>{{film.Title}} - </h2>
    This content will be yielded in the layout above......{{ i18n("your_unread_email_count", 2) }}
    <div>Film: {{film.Title}}</div>
    <div>Film ID: {{film.ID}}</div>
    <div>Path: {{ routeToSlug(film.Slug) }}</div>
    <div>Synopsis: {{ film.Overview | raw}}</div>
    <div>Canonical: {{ canonicalRouteToSlug(film.Slug) }}</div>
    {{ range film.Studio }}
      <div>Studio: {{ . }}</div>
    {{ end}}

    <div>Bonuses: {{ len(film.Bonuses)}} </div>
    {{ range film.Bonuses }}
      <div>
        {{ .Number }}
        {{ .Title  }}
      </div>
    {{ end }}

    <div>
      Prices
      
      <span>From: {{ film.PriceInfo.GetLowestPrice() }} {{ film.PriceInfo.Currency }}</span>

      {{ if film.PriceInfo.HasPrice("buy", "hd")}}
      <div>Buy HD: {{ film.PriceInfo.GetPrice("buy", "hd") }} {{ film.PriceInfo.Currency }}</div>
      {{ end }}
      {{ if film.PriceInfo.HasPrice("rent", "hd")}}
      <div>Rent HD: {{ film.PriceInfo.GetPrice("rent", "hd") }} {{ film.PriceInfo.Currency }}</div>
      {{ end }}
      {{ if film.PriceInfo.HasPrice("buy", "sd")}}
      <div>Buy SD: {{ film.PriceInfo.GetPrice("buy", "sd") }} {{ film.PriceInfo.Currency }}</div>
      {{ end }}
      {{ if film.PriceInfo.HasPrice("rent", "sd")}}
      <div>Rent SD: {{ film.PriceInfo.GetPrice("rent", "sd") }} {{ film.PriceInfo.Currency }}</div>
      <div>Rent SD: {{ film.PriceInfo.GetValue("rent", "sd") }} {{ film.PriceInfo.Currency }}</div>
      {{ end }}
    </div>

    <div>
      Availability
      <span>From: {{ film.Available.From | date }} To: {{ film.Available.To | date }}</span>
    </div>

    <div>Recommendations: {{ len(film.Recommendations)}} </div>
    {{ range film.Recommendations }}
      <div>
        {{ . | json | raw }}
      </div>
    {{ end }}

  </div>
{{end}}
