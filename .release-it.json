{
  "git": {
    "commitMessage": "Release: ${version}",
    "tagName": "${version}"
  },
  "github": {
    "release": true,
    "draft": true,
    "web": true,
    "releaseName": "${version}"
  },

  "npm": {
    "publish": false
  },

  "plugins": {
    "@release-it/keep-a-changelog": {
      "filename": "changelog.md"
    }
  }
}
