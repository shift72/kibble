  "git": {
    "commitMessage": "Release: ${version}",
    "tagName": "${version}"
  },
  "github": {
    "//": "goreleaser will handle doing a release and attaching the kibble binaries",
    "release": false,
    "web": true
  },

  "npm": {
    "publish": false
  },

  "plugins": {
    "@release-it/keep-a-changelog": {
      "filename": "changelog.md"
    }
  }
}
